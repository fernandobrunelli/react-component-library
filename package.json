{
  "name": "react-component-library",
  "version": "0.0.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn build:esm && yarn copyfiles:esm && yarn build:cjs && yarn copyfiles:cjs",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build-storybook": "storybook build",
    "copyfiles:cjs": "copyfiles -u 1 src/**/*.{css,less,sass,scss} dist/cjs",
    "copyfiles:esm": "copyfiles -u 1 src/**/*.{css,less,sass,scss} dist/esm",
    "clean": "rimraf dist/*",
    "lint": "eslint \"{**/*,*}.{js,json,jsx,ts,tsx}\"",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,json,tsx,ts,tsx}\"",
    "storybook": "storybook dev -p 6006",
    "test": "jest --config .jestrc.json",
    "tscheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "bootstrap": ">=5",
    "react": ">=16",
    "react-dom": ">=16",
    "sass": "^1.57.1"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@storybook/addon-actions": "^7.0.0-beta.17",
    "@storybook/addon-docs": "^7.0.0-beta.17",
    "@storybook/addon-essentials": "^7.0.0-beta.17",
    "@storybook/addon-interactions": "^7.0.0-beta.17",
    "@storybook/addon-links": "^7.0.0-beta.17",
    "@storybook/blocks": "^7.0.0-beta.17",
    "@storybook/react": "^7.0.0-beta.17",
    "@storybook/react-webpack5": "^7.0.0-beta.17",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/react": ">=16",
    "@types/react-dom": ">=16",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "acorn": "^8.8.1",
    "acorn-jsx": "^5.3.2",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.0",
    "bootstrap": "^5.2.3",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "react": ">=16",
    "react-dom": ">=16",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "storybook": "^7.0.0-beta.17",
    "storybook-addon-sass-postcss": "^0.1.3",
